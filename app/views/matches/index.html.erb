<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Tournament</th>
      <th>Name</th>
      <th>Winner</th>
      <th>Remote</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament.matches.each do |match| %>
      <tr>
        <td><%= match.tournament.id %></td>
        <td><%= match.status %></td>
        <td><%= match.tournament %></td>
        <td><%= match.name %></td>
        <td><%= match.winner %></td>
      </tr>
    <% end %>
  </tbody>
</table>

